@require "./core.styl"

body,
html,
#app
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;

html
  font-size: (10 / 16) * 100%

body
  color: $font-color
  font-family: $font
  font-size: 1.6rem

img
  max-width: 100%

*::selection {
  color: white
  background: rgba(255, 0, 0, .5);
}

.kldn-page
  z-index: 1
