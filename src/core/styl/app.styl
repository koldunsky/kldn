@require "./core.styl"

body,
html,
#app
  width: 100% !important;
  height: 100%;
  padding: 0;
  margin: 0;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: white;

html
  font-size: (10 / 16) * 100%
  @media $bp-widescreen
    font-size: (10 / 14) * 100%

body
  color: $font-color
  font-family: $font
  font-size: 1.6rem
  min-width: 32rem

#app
  height: auto
  min-height: 100%
  position: relative

img
  max-width: 100%

*::selection {
  color: lighten(red, 25%)
  background: rgba(#fff, 5)
}

.kldn-page
  position: relative
  height: 100%
  z-index: 1

.kldn-footer
  position: absolute
  bottom: 0
  width: 100%
  padding-left: $gutter

@keyframes brick-hop {
  0% {
    bottom: 0;
    transform: rotateZ(0deg);
  }
  15% {
    bottom: 5rem
  }
  30% {
    bottom: 0
  }
  45% {
    bottom: 3rem
    transform: rotateZ(180deg);
  }
  100% {
    bottom: 0
    transform: rotateZ(720deg);
  }
}

.kldn-footer__brick
  width: $gutter
  height: $gutter
