@require "../../core/styl/core.styl"

.accel-layer
  display: block
  height: 100%
  width: 100%
  perspective: 160rem
  transform-style: preserve-3d
  opacity: 1 !important

.accel-layer__container
  width: 100%
  height: 100%
  transition: .5s ease transform;
  will-change: transform;
  transform: translateZ(0);
