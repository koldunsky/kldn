@require "../../core/styl/core.styl"
@keyframes link-hover {
  0% {
    bottom: 0
  }

  100% {
    bottom: 100%
    opacity: 0
  }
}



.kldn-header
  grid()
  color: $font-color-inverted
  padding-top: 1rem
  //position: fixed
  display: block
  z-index: 400
  position: relative

.kldn-header__name
  padding-top: 2rem
  cell(1, 2)
  //text-transform: uppercase
  color: white;
  //-webkit-text-fill-color: transparent; /* Will override color (regardless of order) */
  //-webkit-text-stroke-width: 2px;
  //-webkit-text-stroke-color: white;
  font-weight: 700
  font-size: 5.5rem
  line-height: 1
  -webkit-font-smoothing: antialiased
  @media $bp-desktop
    max-width: 50%
    font-size: 8rem
    -webkit-text-stroke-width: 1px;

.kldn-header__description
  cell(1,2)
  font-size: 1em
  padding-top: 4rem
  font-family: Georgia, serif
  font-weight: 200
  @media $bp-desktop
    font-size: 1.3em
    max-width: 50%
