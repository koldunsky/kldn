.kldn-header__name
  letter-spacing: -.05em;
  font-size: 3.5rem;
  line-height: @font-size * .9
  font-weight: 900;
  position: relative;
  transform-origin: 0 0;
  transform: $base-trnsfrm;
  text-transform: uppercase
  padding-left: $gutter
  padding-right: $gutter
  padding-top: 1rem
  transition: .5s $trans-ease-out-quad
  transition-property left top
  transition-delay $delay

  @media $bp-desktop
    font-size: 4.5rem;
    line-height: 4.2rem
    left: -100%
    top: -100%
    transform: skew(0deg, 30deg) scaleY(1.33333)


.dom-loaded .kldn-header__name
  @media $bp-desktop
    top: 0
    left: 0



.kldn-header__name::after
    display: none
    transform: skew(0deg, 30deg) translateY(-3rem)
    content: '';
    position: absolute;
    border-bottom: 1px solid red;
    left: -50%;
    bottom: 0
    width: 0
    transition: 1s $trans-ease-out-quad
    transition-property width
    transition-delay $delay
    @media $bp-desktop
      display: block
      transform: none

.dom-loaded .kldn-header__name::after
  width: 50% + (100% / 6 * 3);

.kldn-header__video-bg
  padding-left: $gutter
  width: 100%
  position: absolute
  bottom: 0
  right: 0
  @media $bp-tablet
    width: (4 / 6) * 100%
