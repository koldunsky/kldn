@require "../../core/styl/core.styl"
@require "./utility.styl"
/*
** Change this if you need to modify
** the amount of lines displayed
*/
$total-lines = 4;

$fz = 2.2rem;
$fz-desktop = 3.8rem;
$bg = #5138BE;
$delay = .8s;


.kldn-header
  position: relative
  padding-top: 2rem
  max-width: 100%
  width: 100%
  overflow: hidden
  height: 33rem
  //background-image: url('https://pp.userapi.com/c841128/v841128391/2f6f7/epPv-vu3KfI.jpg')
  background-position: 100% 100%
  background-size: 80%
  background-repeat: no-repeat
  @media $bp-desktop
    height: calc(100% - 8rem)
    min-height: 61rem
    padding-top: 0
    background-size: auto 80%
    margin-bottom: 7rem

/*
** Apply styles to the parent element
*/
.Words
  words-container($fz);
  width: .1rem
  padding: 0 $gutter 0;
  transition: .5s $trans-ease-out-quad transform
  transform: translateX(-100%)
  transition-delay 1.2s
  @media $bp-desktop
    words-container($fz-desktop);
    transform: translateX(0)
    position: absolute
    left: 0
    top: 12.75rem

.dom-loaded .Words
  transform translateX(0)
/*
** Apply common styles to each line of text
*/

.Words-line
  words-line($fz);
  @media $bp-desktop
    words-line($fz-desktop);


/*
** Fine-grained text styles
*/
.Words-line__content
  words-line-content($fz);
  position: relative
  padding-left: .7rem
  color: blue
  transition: .5s $trans-ease-out-quad margin
  .Words-line:nth-child(even) &
    margin-top: -2em
    transition-delay $initDelay
  .Words-line:nth-child(odd) &
    margin-top: 2em
    transition-delay $initDelay + .2s

  @media $bp-desktop
    words-line-content($fz-desktop);

.dom-loaded .Words-line__content
  margin-top: 0 !important

