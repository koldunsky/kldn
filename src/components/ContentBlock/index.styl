@require "../../core/styl/core.styl"

.kldn-content-block
  padding-left: $gutter
  padding-right: $gutter
  padding-bottom: 2.5rem
  display: block
  max-width: 100%
  white-space: word-break


.kldn-content-block__title
  position: relative
  padding-bottom: .5rem
  font-size: 2.5rem
  line-height: 2.5rem
  font-weight: bold

.kldn-content-block__title::before {
  content: ''
  position: absolute
  background: $accent-color
  left: -($gutter)
  top: 0
  bottom: 0
  width: .4rem
  height: 2.5rem
}

.kldn-content-block__content


.kldn-content-block ul
  padding: 0
  margin: 0
  list-style-type none

.kldn-content-block li
  padding: 0
  margin-bottom: .25em

