@require '../../core/styl/core.styl'

.kldn-bg
  position: relative
  height: 100%
  width: 100%

.kldn-bg__img
  height: 100%
  width: 100%
  background-position: center
  -webkit-background-size: cover
  background-size: cover

.kldn-bg__overlay
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0
  height: 100%
  width: 100%
  background: $bg
  mix-blend-mode: multiply
