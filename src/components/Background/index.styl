@require '../../core/styl/core.styl'

.kldn-bg
//absolute-center()
  position: relative
  height: 100%
  width: 100%
  transition: 2s $trans-ease-out-quad .5s background
  overflow: hidden


.kldn-bg__img
  init-appearance(1s)
  height: 100%
  width: 100%
  background-position: center
  -webkit-background-size: cover
  background-size: contain
  background-repeat: no-repeat
  background-color: #9fabae
  @media $bp-desktop
    visibility visible
    background-size: cover
  @media (max-width: 600px)
    background-image: none !important

.kldn-bg__accel
  absolute-center()
  width: 110% !important
  height: 100% !important
  transform: translate(-5%, -3%)
  @media $bp-desktop
    //background: none

.kldn-bg__overlay
  height: 100%
  width: 100%
  background: $accent-color

.kldn-bg__overlay-accel
  opacity: .6
  transform: translateZ(200px)
  mix-blend-mode: multiply
  position: absolute
  top: -100%
  transition: 1s $trans-ease-out-quad .5s
  transition-property: top left
  width: calc(75% - 2rem) !important
  height: calc(88% - 2rem) !important

  @media $bp-desktop
    height: 55% !important
    width: 55% !important

.dom-loaded .kldn-bg__overlay-accel
  top: 1rem
  left: 1rem
  @media $bp-desktop
    top: -5%
    left: -5%
