@require '../../core/styl/core.styl'

.kldn-bg__img
  init-appearance()
  height: 100%
  width: 100%
  background-position: center
  -webkit-background-size: cover
  background-size: cover
  visibility hidden
  @media $bp-desktop
    visibility visible

.kldn-bg
  //absolute-center()
  position: relative
  height: 100%
  width: 100%
  background: transparent
  transition: 2s $trans-ease-out-quad .5s background

.dom-loaded .kldn-bg
  background: #a8aeae
  @media $bp-desktop
    background: transparent

.kldn-bg__accel
  absolute-center()
  width: 110% !important
  height: 110% !important
  transform: translate(-5%, 0)
  @media $bp-desktop
    background: none

.kldn-bg__overlay
  height: 100%
  width: 100%
  background: $accent-color

.kldn-bg__overlay-accel
  opacity: .6
  transform: translateZ(200px)
  mix-blend-mode: multiply
  position: absolute
  top: -100%
  transition: 1s $trans-ease-out-quad .5s
  width: calc(75% - 2rem) !important
  height: calc(75% - 2rem) !important

  @media $bp-desktop
    height: 55% !important
    width: 55% !important

.dom-loaded .kldn-bg__overlay-accel
  top: 1rem
  left: 1rem
  @media $bp-desktop
    top: -5%
    left: -5%
